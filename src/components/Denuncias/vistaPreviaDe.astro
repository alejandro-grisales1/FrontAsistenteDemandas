---
import { fetchResource } from "../../utils/api";

let data = []

try {
  data = await fetchResource();
} catch (error) {
  console.error('Error facthcing data',error)
}
---
<body class="bg-gray-100">
  <section class="h-screen relative gap-8 px-16 py-12 bg-gray-100 border-none">
    {data.map((item)=>(
      <div class="border-b-2 border-black" key={item.id}>
        <h2 class="text-green-500 font-bold text-xl">{item.titulo}</h2>
        <p>
          {item.descripcion}
        </p>
      </div>
    ))}
  </section>
</body>